@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model List<RewardPointDTO>

@{
    ViewData["Title"] = "Reward Point List";
}

<section class="content-main">
    <div class="row">
        <div class="col-12">
            <div class="card mt-4 shadow-sm">
                <div class="card-header bg-secondary text-white text-center">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Reward ID</th>
                                <th>User ID</th>
                                <th>Total Points</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.RewardPointsId</td>
                                    <td>@item.UserId</td>
                                    <td>@item.TotalPoints</td>
                                    <td class="text-center">
                                        <a asp-action="AwardPoints" asp-route-userId="@item.UserId" class="btn btn-sm btn-success me-2">Award</a>
                                        <a asp-action="GetTotalRewardPoints" asp-route-userId="@item.UserId" class="btn btn-sm btn-info">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

