@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@model RewardPointDTO

@{
    ViewData["Title"] = "Award Points";
}

<section class="content-main">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card mt-4 shadow-sm">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AwardPoints" method="post">
                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-3">
                            <label for="TotalPoints" class="form-label">Tổng điểm thưởng</label>
                            <input type="number" name="TotalPoints" class="form-control" placeholder="Nhập số điểm muốn thưởng..." min="1" />
                            <span asp-validation-for="TotalPoints" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">Hủy</a>
                            <button type="submit" class="btn btn-success">Thưởng điểm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

