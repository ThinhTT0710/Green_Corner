<section class="product-tabs section-padding position-relative">
    <div class="container">
        <div class="section-title style-2 wow animate__animated animate__fadeIn">
            <h3>@sectionTitleVoucher</h3>
            <ul class="nav nav-tabs links" id="voucherTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a asp-controller="Reward" asp-action="Index"
                       class="nav-link active"
                       role="tab"
                       aria-selected="true">
                        Tất cả
                    </a>
                </li>
            </ul>
        </div>
        <div class="tab-content" id="voucherTabContent">
            <div class="tab-pane fade show active" id="voucher-tab" role="tabpanel" aria-labelledby="voucher-tab-one">
                @if (Model.Top10Vouchers != null && Model.Top10Vouchers.Any())
                {
                    <div class="row product-grid-4">
                        @foreach (var voucher in Model.Top10Vouchers)
                        {
                            <div class="col-lg-1-5 col-md-4 col-12 col-sm-6">
                                <div class="product-cart-wrap mb-30 wow animate__animated animate__fadeIn" data-wow-delay=".1s">
                                    <div class="product-img-action-wrap">
                                        <div class="product-img product-img-zoom">
                                            <a asp-action="ViewDetailVoucher" asp-route-voucherId="@voucher.VoucherId" style="display: block; height: 100%;">
                                                <div class="d-flex rounded-3 overflow-hidden shadow-sm border" style="height: 120px;">

                                                    <!-- PHẦN TRÁI -->
                                                    <div class="d-flex align-items-center justify-content-center flex-column"
                                                         style="background-color: #1c2b36; width: 40%; height: 100%;">
                                                        <i class="bi bi-percent text-white" style="font-size: 36px;"></i>
                                                        <i class="bi bi-gift-fill text-white opacity-25" style="font-size: 18px;"></i>
                                                    </div>

                                                    <!-- PHẦN PHẢI -->
                                                    <div class="d-flex flex-column justify-content-between px-3 w-100 py-2"
                                                         style="background-color: #3BB77E; height: 100%;">
                                                        <!-- Tiêu đề -->
                                                        <div class="d-flex align-items-center justify-content-center flex-grow-1">
                                                            <div class="fw-bold text-dark bg-white px-4 py-2 rounded-pill text-uppercase shadow-sm text-center text-truncate"
                                                                 style="font-size: 16px; letter-spacing: 1px; width: 100%;">
                                                                @voucher.Title
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </a>
                                        </div>

                                        <!-- Action -->
                                        <div class="product-action-1">
                                            <a class="action-btn" asp-action="ViewDetailVoucher" asp-controller="Reward" asp-route-voucherId="@voucher.VoucherId" aria-label="Xem chi tiết">
                                                <i class="fi-rs-eye"></i>
                                            </a>
                                        </div>

                                        <!-- Badge -->
                                        <div class="product-badges product-badges-position product-badges-mrg">
                                            <span class="hot">HOT</span>
                                        </div>
                                    </div>

                                    <!-- PHẦN DƯỚI: content -->
                                    <div class="product-content-wrap">
                                        <div class="product-category">
                                            <span class="text-success">Điểm: @voucher.PointsRequired</span>
                                        </div>

                                        <h2>
                                            <a asp-action="ViewDetailVoucher" asp-controller="Reward" asp-route-voucherId="@voucher.VoucherId">
                                                @voucher.Title
                                            </a>
                                        </h2>

                                        <!-- Địa chỉ -->
                                        <div class="font-xs text-muted text-truncate">
                                            <i class="bi bi-geo-alt-fill"></i> @voucher.Address
                                        </div>

                                        <div class="font-xs text-muted">
                                            HSD: @voucher.ExpirationDate?.ToString("dd/MM/yyyy HH:mm")
                                        </div>

                                        <!-- Số lượng -->
                                        <div class="text-muted small mb-2">
                                            <i class="bi bi-box-seam"></i> Còn lại: <strong>@voucher.Quantity</strong>
                                        </div>

                                        <!-- Nút Đổi -->
                                        @if (!isFallbackVoucher)
                                        {
                                            <button type="button"
                                                    class="btn btn-lg btn-success w-100 mb-2"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#confirmRedeemModal-@voucher.VoucherId">
                                                Đổi @voucher.PointsRequired điểm
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>

                            @if (!isFallbackVoucher)
                            {
                                <div class="modal fade" id="confirmRedeemModal-@voucher.VoucherId" tabindex="-1" aria-labelledby="confirmModalLabel-@voucher.VoucherId" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header text-white" style="background-color: #3BB77E;">
                                                <h5 class="modal-title text-white" id="confirmModalLabel-@voucher.VoucherId">Xác nhận đổi điểm</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                            </div>
                                            <div class="modal-body">
                                                Bạn có chắc muốn đổi <strong>@voucher.PointsRequired</strong> điểm để nhận voucher <strong>@voucher.Title</strong> không?
                                            </div>
                                            <div class="modal-footer">
                                                <form asp-action="ExchangePoints" asp-controller="PointTransaction" method="post">
                                                    <input type="hidden" name="points" value="@voucher.PointsRequired" />
                                                    <input type="hidden" name="voucherId" value="@voucher.VoucherId" />
                                                    <button type="submit" class="btn btn-success">Xác nhận đổi</button>
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Huỷ</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center mt-4" role="alert">
                        Hiện không có voucher nào khả dụng để hiển thị.
                    </div>
                }
            </div>
        </div>
    </div>
</section>
