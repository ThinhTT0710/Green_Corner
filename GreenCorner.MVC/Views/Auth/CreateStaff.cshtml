@model StaffDTO

<form asp-controller="Auth" asp-action="CreateStaff" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Create Staff</h1>
        <input hidden asp-for="ID" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Email</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Address</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">PhoneNumber</label>
            </div>
            <div class="col-10 pb-3">

                <textarea asp-for="PhoneNumber" class="form-control" rows="5"></textarea>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Role</label>
            </div>
            <div class="col-10 pb-3">
                <select name="Role" asp-for="Role">
                    <option value="EVENTSTAFF">Event Staff</option>
                    <option value="SALESTAFF">Sale Staff</option>
                </select>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Avatar" class="form-control" />
                <input asp-for="Avatar" hidden class="form-control" />
                <span asp-validation-for="Avatar" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">

                <a asp-controller="Auth" asp-action="GetStaffList" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />

            </div>
        </div>
        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}