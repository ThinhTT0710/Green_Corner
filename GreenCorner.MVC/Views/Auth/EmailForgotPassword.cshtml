

<form asp-action="EmailForgotPassword" method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Forgot PassWord</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input type="email" name="email-forgot" id="email-forgot" class="form-control" placeholder="Email" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit"> Send Email</button>
            </div>
        </div>
    </div>
</form>
