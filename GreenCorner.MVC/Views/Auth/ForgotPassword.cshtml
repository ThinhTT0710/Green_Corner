@model ForgotPasswordRequestDTO

<form asp-action="ForgotPassword" method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Forgot Password</h1>
        </div>
        <div class="row">
            <input type="hidden" asp-for="UserId"/>
            <input type="hidden" asp-for="Token" />
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit"> Submit</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
