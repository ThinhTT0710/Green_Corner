@model UserDTO

<form asp-controller="Auth" asp-action="BlockStaff" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Delete Product</h1>
        <input hidden asp-for="ID" />
        <input hidden asp-for="Avatar" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> FullName</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="FullName" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Email</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Address</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Address" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">PhoneNumber</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PhoneNumber" disabled class="form-control" />
            </div>
            
            

            <div class="col-5 offset-2">

                <a asp-controller="Auth" asp-action="GetStaffList" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Block" class="btn btn-danger form-control" />

            </div>
        </div>
        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}