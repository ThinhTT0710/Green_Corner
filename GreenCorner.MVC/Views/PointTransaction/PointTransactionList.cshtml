@model IEnumerable<PointTransactionListViewModel>
@{
    ViewData["Title"] = "Point Transaction List";
    Layout = "_LayoutAdmin";
}
﻿
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Danh sách lịch sử trao đổi</h2>
            <p>Danh sách lịch sử trao đổi điểm của người dùng</p>
        </div>
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <div class="row gx-3">
                <div class="col-lg-4 col-md-6 me-auto">
                    <input type="text" placeholder="Tìm kiếm..." class="form-control" />
                </div>
                <div class="col-lg-2 col-6 col-md-3">
                    <select class="form-select">
                        <option>-- Loại --</option>
                        <option>Nhận điểm</option>
                        <option>Đổi điểm</option>
                    </select>
                </div>
                <div class="col-lg-2 col-6 col-md-3">
                    <select class="form-select">
                        <option>Show 20</option>
                        <option>Show 30</option>
                        <option>Show 40</option>
                    </select>
                </div>
            </div>
        </header>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th scope="col">Người dùng</th>
                            <th scope="col">Email</th>
                            <th scope="col">Điểm</th>
                            <th scope="col">Loại</th>
                            <th scope="col">Ngày</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.pointTransactionDTO.PointTransactionsId</td>
                                <td>
                                    <a class="itemside" href="#">
                                        <div class="left">
                                            <img src="@item.User.Avatar" class="img-sm img-thumbnail" alt="Avatar" />
                                        </div>
                                        <div class="info">
                                            <h6 class="mb-0">@item.User.FullName</h6>
                                        </div>
                                    </a>
                                </td>
                                <td>@item.User.Email</td>
                                @if(@item.pointTransactionDTO.Type == "Đổi điểm")
                                {
                                <td>
                                    <span class="badge rounded-pill badge-soft-warning">@item.pointTransactionDTO.Type</span>
                                </td>
                                }
                                else
                                {
                                    <td>
                                        <span class="badge rounded-pill badge-soft-success">@item.pointTransactionDTO.Type</span>
                                    </td>
                                }
                                <td>@item.pointTransactionDTO.Points</td>
                                <td>@item.pointTransactionDTO.CreatedAt?.ToString("HH:mm:ss dd/MM/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="pagination-area mt-15 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
                <li class="page-item active"><a class="page-link" href="#">01</a></li>
                <li class="page-item"><a class="page-link" href="#">02</a></li>
                <li class="page-item"><a class="page-link" href="#">03</a></li>
                <li class="page-item"><a class="page-link dot" href="#">...</a></li>
                <li class="page-item"><a class="page-link" href="#">16</a></li>
                <li class="page-item">
                    <a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</section>