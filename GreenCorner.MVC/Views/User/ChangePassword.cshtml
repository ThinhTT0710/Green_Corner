@model ChangePasswordRequestDTO

<form asp-controller="User" asp-action="ChangePassword" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">ChangePassWord</h1>
        <input type="hidden" asp-for="UserID" class="form-control" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Email</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Old Password</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Quantity</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="col-5">
                <input type="submit" value="Change Password" class="btn btn-success form-control" />

            </div>
        </div>
        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}