@model GreenCorner.MVC.ViewModels.VolunteerEventListViewModel
@{
    ViewData["Title"] = "Hoạt động người dùng";
}
<section class="content-main">
    <div class="content-header">
        <h2 class="content-title mb-4">Hoạt động đã đăng ký</h2>
    </div>

    <div class="card mb-4">
        <header class="card-header">
            <div class="row gy-2 gx-3 align-items-center">
                <div class="col-lg-4 col-md-6">
                    <input type="text" id="searchInput" placeholder="Tìm kiếm sự kiện..." class="form-control" />
                </div>
                <div class="col-lg-2 col-md-3">
                    <select id="itemsPerPage" class="form-select">
                        <option value="10">Hiển thị 10</option>
                        <option value="20">Hiển thị 20</option>
                        <option value="all">Tất cả</option>
                    </select>
                </div>
                <div class="col-lg-3 col-md-4">
                    <select id="eventStatusFilter" class="form-select">
                        <option value="">Trạng thái sự kiện</option>
                        <option value="open">Đang mở</option>
                        <option value="close">Đã đóng</option>
                        <option value="is going on">Đang diễn ra</option>
                    </select>
                </div>
                <div class="col-lg-3 col-md-4">
                    <select id="registerStatusFilter" class="form-select">
                        <option value="">Trạng thái đăng ký</option>
                        <option value="approved">Đã duyệt</option>
                        <option value="pending">Đang chờ duyệt</option>
                        <option value="rejected">Đã bị từ chối</option>
                        <option value="participated">Đã tham gia</option>
                    </select>
                </div>
            </div>
        </header>


        <div class="card-body">
            <div class="mb-3">
                <a asp-controller="User" asp-action="Profile" class="btn btn-outline-secondary">
                    ← Quay lại trang cá nhân
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle" id="eventTable">
                    <thead class="table-light">
                        <tr>
                            <th>Tên sự kiện</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th>Trạng thái sự kiện</th>
                            <th>Đánh giá sự kiện</th>
                            <th>Loại đơn</th>
                            <th>Phân công</th>
                            <th>Vật dụng mang theo</th>
                            <th>Trạng thái đăng ký</th>
                            <th>Ngày đăng ký</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Participations.Any())
                        {
                            <tr>
                                <td colspan="10" class="text-center text-muted py-4">
                                    Bạn chưa tham gia hoạt động nào.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model.Participations)
                            {
                                <tr class="event-row"
                                    data-title="@item.Event.Title.ToLower()"
                                    data-eventstatus="@item.Event.Status.ToLower()"
                                    data-volunteerstatus="@item.Volunteer.Status.ToLower()">
                                    <td>
                                        <a asp-controller="Event" asp-action="GetEventById" asp-route-eventId="@item.Event.CleanEventId">
                                            @item.Event.Title
                                        </a>
                                    </td>
                                    <td>@item.Event.StartDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Event.EndDate?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @{
                                            var status = item.Event.Status;
                                            var eventBg = status switch
                                            {
                                                "Open" => "#28a745",
                                                "Close" => "#ffc107",
                                                _ => "#6c757d"
                                            };
                                            var eventColor = status == "Pending" ? "#212529" : "#fff";
                                            var statusText = status switch
                                            {
                                                "Open" => "Đang mở",
                                                "Close" => "Đã đóng",
                                                "Is Going On" => "Đang diễn ra",
                                                _ => "Không xác định"
                                            };
                                        }
                                        <span class="badge rounded-pill" style="background-color:@(eventBg); color:@(eventColor);">
                                            @statusText
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.Event.Status == "Close")
                                        {
                                            <button type="button"
                                                    class="btn btn-success btn-sm btn-rate-event"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#rateEventModal"
                                                    data-event-id="@item.Event.CleanEventId">
                                                Đánh giá sự kiện
                                            </button>
                                            <button type="button"
                                                    class="btn btn-info btn-sm btn-review-leader"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#leaderReviewModal"
                                                    data-event-id="@item.Event.CleanEventId"
                                                    data-leader-id="@item.TeamLeaderId">
                                                Đánh giá đội trưởng
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary text-white">
                                                Chưa thể đánh giá
                                            </span>
                                        }
                                    </td>
                                    <td>@item.Volunteer.ApplicationType</td>
                                    <td>@item.Volunteer.Assignment</td>
                                    <td>@item.Volunteer.CarryItems</td>
                                    <td>
                                        @{
                                            var statusVL = item.Volunteer.Status;
                                            var volunteerBg = statusVL switch
                                            {
                                                "Approved" => "#28a745",
                                                "Pending" => "#ffc107",
                                                "Rejected" => "#dc3545",
                                                "Participated" => "#17a2b8",
                                                  _ => "#6c757d"
                                            };
                                            var volunteerColor = statusVL == "Pending" ? "#212529" : "#fff";
                                            var statusTextVL = statusVL switch
                                            {
                                                "Approved" => "Đã duyệt",
                                                "Pending" => "Đang chờ duyệt",
                                                "Rejected" => "Đã bị từ chối",
                                                "Participated" => "Đã tham gia",
                                                _ => "Không xác định"
                                            };
                                        }
                                        <span class="badge rounded-pill" style="background-color:@(volunteerBg); color:@(volunteerColor);">
                                            @statusTextVL
                                        </span>
                                    </td>
                                    <td>@item.Volunteer.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="pagination-area mt-3" id="pagination"></div>
        </div>
    </div>
</section>
<div class="modal fade" id="rateEventModal" tabindex="-1" aria-labelledby="rateEventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="rateEventForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="rateEventModalLabel">Đánh giá sự kiện</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="rateEventId" name="CleanEventId" />

                    <div class="mb-3">
                        <label class="form-label">Xếp hạng của bạn:</label>
                        <div>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <input required type="radio" asp-for="@(new EventReviewDTO().Rating)" id="event-star-@i" name="Rating" value="@i" style="display: none;" />

                                <label for="event-star-@i" class="star-label"
                                       style="font-size: 28px; color: gray; cursor: pointer;"
                                       onmouseover="highlightStars(@i, '#rateEventModal', 'event')"
                                       onmouseout="resetStars('#rateEventModal', 'event')"
                                       onclick="selectStar(@i, '#rateEventModal', 'event')">&#9733;</label>
                            }
                        </div>
                        <div id="rating-error" class="text-danger"></div>
                    </div>

                    <div class="mb-3">
                        <label for="rateComment" class="form-label">Nội dung đánh giá:</label>
                        <textarea class="form-control" name="Comment" id="rateComment" rows="4" placeholder="Chia sẻ cảm nhận của bạn về sự kiện..."></textarea>
                        <div id="comment-error" class="text-danger"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 10px;">Hủy</button>
                    <button type="submit" class="btn btn-primary" style=" font-weight: 700; font-size: 14px; padding: 12px 30px;">Gửi đánh giá</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="leaderReviewModal" tabindex="-1" aria-labelledby="leaderReviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="leaderReviewForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="leaderReviewModalLabel">Đánh giá Đội trưởng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="leaderReviewEventId" name="CleanEventId" />
                    <input type="hidden" id="leaderReviewLeaderId" name="LeaderId" />

                    <div class="mb-3">
                        <label class="form-label">Xếp hạng đội trưởng:</label>
                        <div>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <input required type="radio" asp-for="@(new LeaderReviewDTO().Rating)" id="leader-star-@i" name="Rating" value="@i" style="display: none;" />

                                <label for="leader-star-@i" class="star-label"
                                       style="font-size: 28px; color: gray; cursor: pointer;"
                                       onmouseover="highlightStars(@i, '#leaderReviewModal', 'leader')"
                                       onmouseout="resetStars('#leaderReviewModal', 'leader')"
                                       onclick="selectStar(@i, '#leaderReviewModal', 'leader')">&#9733;</label>
                            }
                        </div>
                        <div id="leader-rating-error" class="text-danger"></div>
                    </div>

                    <div class="mb-3">
                        <label for="leaderReviewComment" class="form-label">Nội dung đánh giá:</label>
                        <textarea class="form-control" name="Comment" id="leaderReviewComment" rows="4" placeholder="Chia sẻ cảm nhận của bạn về đội trưởng..."></textarea>
                        <div id="leader-comment-error" class="text-danger"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const rows = document.querySelectorAll(".event-row");
            const searchInput = document.getElementById("searchInput");
            const eventStatusFilter = document.getElementById("eventStatusFilter");
            const registerStatusFilter = document.getElementById("registerStatusFilter");
            const itemsPerPageSelect = document.getElementById("itemsPerPage");
            const pagination = document.getElementById("pagination");

            function filterAndPaginate() {
                const keyword = searchInput.value.toLowerCase();
                const selectedEventStatus = eventStatusFilter.value;
                const selectedRegisterStatus = registerStatusFilter.value;
                const perPage = itemsPerPageSelect.value;

                let filtered = Array.from(rows).filter(row => {
                    const title = row.getAttribute("data-title");
                    const eventStatus = row.getAttribute("data-eventstatus");
                    const volunteerStatus = row.getAttribute("data-volunteerstatus");

                    const matchTitle = title.includes(keyword);
                    const matchEventStatus = !selectedEventStatus || eventStatus === selectedEventStatus;
                    const matchRegisterStatus = !selectedRegisterStatus || volunteerStatus === selectedRegisterStatus;

                    return matchTitle && matchEventStatus && matchRegisterStatus;
                });

                rows.forEach(row => row.style.display = "none");

                if (perPage === "all") {
                    filtered.forEach(row => row.style.display = "");
                    pagination.innerHTML = "";
                    return;
                }

                const limit = parseInt(perPage);
                const totalPages = Math.ceil(filtered.length / limit);

                let currentPage = 1;
                renderPage(currentPage);

                function renderPage(page) {
                    const start = (page - 1) * limit;
                    const end = start + limit;
                    filtered.slice(start, end).forEach(row => row.style.display = "");

                    let buttons = "";
                    for (let i = 1; i <= totalPages; i++) {
                        buttons += `<button class="btn btn-sm btn-outline-success me-1 page-btn ${i === page ? 'active' : ''}" data-page="${i}">${i}</button>`;
                    }
                    pagination.innerHTML = buttons;

                    document.querySelectorAll(".page-btn").forEach(btn => {
                        btn.addEventListener("click", () => {
                            rows.forEach(row => row.style.display = "none");
                            renderPage(parseInt(btn.getAttribute("data-page")));
                        });
                    });
                }
            }

            searchInput.addEventListener("input", filterAndPaginate);
            eventStatusFilter.addEventListener("change", filterAndPaginate);
            registerStatusFilter.addEventListener("change", filterAndPaginate);
            itemsPerPageSelect.addEventListener("change", filterAndPaginate);

            filterAndPaginate();
        });
    </script>
    <script>
        let selectedRatings = {
            '#rateEventModal': 0,
            '#leaderReviewModal': 0
        };

        function highlightStars(rating, modalId, prefix) {
            for (let i = 1; i <= 5; i++) {
                const forId = `${prefix}-star-${i}`;
                const label = document.querySelector(`${modalId} label[for='${forId}']`);
                if (label) {
                    label.style.color = i <= rating ? 'orange' : 'gray';
                }
            }
        }

        function resetStars(modalId, prefix) {
            const currentRating = selectedRatings[modalId];
            for (let i = 1; i <= 5; i++) {
                const forId = `${prefix}-star-${i}`;
                const label = document.querySelector(`${modalId} label[for='${forId}']`);
                if (label) {
                    label.style.color = i <= currentRating ? 'orange' : 'gray';
                }
            }
        }

        function selectStar(rating, modalId, prefix) {
            selectedRatings[modalId] = rating;
            if (rating > 0) {
                const inputId = `${prefix}-star-${rating}`;
                document.querySelector(`${modalId} input[id='${inputId}']`).checked = true;
            }
            resetStars(modalId, prefix);
        }

        $(document).ready(function () {
            $('.btn-rate-event').click(function () {
                var eventId = $(this).data('event-id');
                $('#rateEventId').val(eventId);
                $('#rateEventForm')[0].reset();
                selectStar(0, '#rateEventModal', 'event'); 
                $('#rateEventForm .text-danger').text('');
            });

            $('#rateEventForm').submit(function (e) {
                e.preventDefault();
                var formData = $(this).serialize();
                $('#rating-error, #comment-error').text('');
                $.ajax({
                    url: '@Url.Action("RateEvent", "Event")',
                    method: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.isSuccess) {
                            $('#rateEventModal').modal('hide');
                            Swal.fire({ icon: 'success', title: 'Thành công!', text: 'Cảm ơn bạn đã gửi đánh giá.' }).then(() => { location.reload(); });
                        } else {
                            if (response.errors) {
                                if (response.errors.Rating) { $('#rating-error').text(response.errors.Rating); }
                                if (response.errors.Comment) { $('#comment-error').text(response.errors.Comment); }
                            } else {
                                Swal.fire({ icon: 'error', title: 'Thất bại', text: response.message || 'Đã có lỗi xảy ra.' });
                            }
                        }
                    },
                    error: function () { Swal.fire({ icon: 'error', title: 'Lỗi', text: 'Không thể gửi đánh giá. Vui lòng thử lại.' }); }
                });
            });

            $('.btn-review-leader').click(function () {
                var eventId = $(this).data('event-id');
                var leaderId = $(this).data('leader-id');
                $('#leaderReviewEventId').val(eventId);
                $('#leaderReviewLeaderId').val(leaderId);
                $('#leaderReviewForm')[0].reset();
                selectStar(0, '#leaderReviewModal', 'leader');
                $('#leaderReviewForm .text-danger').text('');
            });

            $('#leaderReviewForm').submit(function (e) {
                e.preventDefault();
                var formData = $(this).serialize();
                $('#leader-rating-error, #leader-comment-error').text('');
                $.ajax({
                    url: '@Url.Action("LeaderReview", "Event")',
                    method: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.isSuccess) {
                            $('#leaderReviewModal').modal('hide');
                            Swal.fire({ icon: 'success', title: 'Thành công!', text: 'Cảm ơn bạn đã đánh giá đội trưởng.' }).then(() => { location.reload(); });
                        } else {
                            if (response.errors) {
                                if (response.errors.Rating) { $('#leader-rating-error').text(response.errors.Rating); }
                                if (response.errors.Comment) { $('#leader-comment-error').text(response.errors.Comment); }
                            } else {
                                Swal.fire({ icon: 'error', title: 'Thất bại', text: response.message || 'Đã có lỗi xảy ra.' });
                            }
                        }
                    },
                    error: function () { Swal.fire({ icon: 'error', title: 'Lỗi', text: 'Không thể gửi đánh giá. Vui lòng thử lại.' }); }
                });
            });
        });
    </script>
}
