@model UserDTO
<form asp-controller="User" asp-action="UpdateProfile">
<div class="container border p-3">
    <h1 class="text-dark text-center">Update Profile</h1>
    <input hidden asp-for="ID" />
    <input hidden asp-for="Avatar" />
    <hr />
    <div class="row">
        <div class="col-2">
            <label class="control-label pt-2" style="font-size:20px;">Email</label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Email" readonly class="form-control" />
        </div>
        <div class="col-2">
            <label class="control-label pt-2" style="font-size:20px;">Full Name</label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="col-2">
            <label class="control-label pt-2" style="font-size:20px;">Address</label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="col-2">
            <label class="control-label pt-2" style="font-size:20px;">Phone Number</label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
    </div>
    <div>
    </div>
</div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}