@model GreenCorner.MVC.ViewModels.VolunteerEventListViewModel

@{
    var totalPoints = Model.Participations.Sum(p => p.Event.PointsAward ?? 0);
}

<div class="invoice invoice-content invoice-5">
    <div class="back-top-home hover-up mt-30 ml-30">
        <a class="hover-up" asp-action="Index" asp-controller="Home"><i class="fi-rs-home mr-5"></i> Trang chủ</a>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="invoice-inner">
                    <div class="invoice-info" id="invoice_wrapper">
                        <div class="invoice-header">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="logo d-flex align-items-center">
                                        <a href="/" class="mr-20">
                                            <img src="~/assets/imgs/theme/favicon.svg" alt="logo" />
                                        </a>
                                        <div class="text">
                                            <strong class="text-brand">GreenCorner</strong><br />
                                            Thành tích tình nguyện viên
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 text-end">
                                    <h2>ACHIEVEMENT VOLUNTEER</h2>
                                    <h6>ID người dùng: <span class="text-brand">@User.Identity?.Name</span></h6>
                                </div>
                            </div>
                        </div>
                        <div class="invoice-banner">
                            <img src="~/assets/imgs/invoice/banner.png" alt="">
                        </div>
                        <div class="invoice-center">
                            <div class="table-responsive">
                                <table class="table table-striped invoice-table">
                                    <thead class="bg-active">
                                        <tr>
                                            <th>Sự kiện</th>
                                            <th class="text-center">Ngày bắt đầu</th>
                                            <th class="text-center">Ngày kết thúc</th>
                                            <th class="text-center">Phân công</th>
                                            <th class="text-center">Mang theo</th>
                                            <th class="text-right">Điểm</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Participations)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="item-desc-1">
                                                        <span>@item.Event.Title</span>
                                                        <small>Mã sự kiện: @item.Event.CleanEventId</small>
                                                    </div>
                                                </td>
                                                <td class="text-center">@item.Event.StartDate?.ToString("dd/MM/yyyy")</td>
                                                <td class="text-center">@item.Event.EndDate?.ToString("dd/MM/yyyy")</td>
                                                <td class="text-center">@item.Volunteer.Assignment</td>
                                                <td class="text-center">@item.Volunteer.CarryItems</td>
                                                <td class="text-right">@item.Event.PointsAward</td>
                                            </tr>
                                        }
                                        <tr>
                                            <td colspan="5" class="text-end f-w-600">Tổng sự kiện đã tham gia</td>
                                            <td class="text-right">@Model.Participations.Count</td>
                                        </tr>
                                        <tr>
                                            <td colspan="5" class="text-end f-w-600">Tổng điểm tích lũy</td>
                                            <td class="text-right f-w-600">@totalPoints</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="invoice-bottom pb-80">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="mb-15">Thông tin báo cáo</h6>
                                    <p class="font-sm">
                                        <strong>Ngày tạo:</strong> @DateTime.Now.ToString("dd/MM/yyyy")<br />
                                        <strong>Người xem:</strong> @User.Identity?.Name<br />
                                        <strong>Ghi chú:</strong> Chỉ thống kê các sự kiện đã được duyệt.
                                    </p>
                                </div>
                                <div class="col-md-6 text-end">
                                    <h6 class="mb-15">Tổng điểm</h6>
                                    <h3 class="mt-0 mb-0 text-brand">@totalPoints</h3>
                                    <p class="mb-0 text-muted">Chưa bao gồm điểm thưởng thêm</p>
                                </div>
                            </div>
                            <div class="row text-center">
                                <div class="hr mt-30 mb-30"></div>
                                <p class="mb-0 text-muted"><strong>Chú ý:</strong> Đây là bảng thống kê thành tích cá nhân được tạo từ hệ thống.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
