@model List<OrderDTO>
<div class="card shadow border-0 mt-4">
<div class="card-header bg-secondary bg-gradient ml-0 py-3">
	<div class="row">
		<div class="col-12 text-center">
			<h1 class="text-white">Order List</h1>
		</div>
	</div>
</div>
<div class="card-body p-4">
	<table class="table">
		<thead>
			<tr>
				<th>
					Order ID
				</th>
				<th>
					Total
				</th>
				<th>
					Payment
				</th>
				<th>
					Status
				</th>
				<th>
					Date
				</th>
				<th>
					Action
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@item.OrderId
					</td>
					<td>
						@((item.TotalMoney).ToString("c"))
					</td>
					<td>
						@item.PaymentMethod
					</td>
					<td>
                        @item.Status
					</td>
					<td>
						@item.CreatedAt.ToString("dd/MM/yyyy")
					</td>

					<td>
							<a class="btn btn-primary" asp-controller="SaleStaff" asp-action="OrderDetail" asp-route-id="@item.OrderId">
								<i class="bi bi-list-task"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>

</div>