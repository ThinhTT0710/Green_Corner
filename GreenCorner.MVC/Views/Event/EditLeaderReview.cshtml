@model LeaderReviewDTO

<form asp-controller="Event" asp-action="EditLeaderReview" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">Leader Review</h1>
        <input hidden asp-for="LeaderReviewId" />
        <input hidden asp-for="CreatedAt" />
        <input hidden asp-for="CleanEventId" />
        <input hidden asp-for="LeaderId" />
        <input hidden asp-for="ReviewerId" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Rating</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Comment</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">

                <a asp-controller="Event" asp-action="LeaderReviewHistory" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />

            </div>
        </div>
        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}