@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model EventDTO

<form asp-controller="Event" asp-action="UpdateCleanupEvent" enctype="multipart/form-data">
    @* Hidden fields *@
    <input type="hidden" asp-for="CleanEventId" />
    <input type="hidden" asp-for="CreatedAt" />
    <input type="hidden" asp-for="EndDate" />
    <input type="hidden" asp-for="Title" />
    <input type="hidden" asp-for="Description" />
    <input type="hidden" asp-for="StartDate" />
    <input type="hidden" asp-for="MaxParticipants" />
    <input type="hidden" asp-for="PointsAward" />
    <input type="hidden" asp-for="Address" />
    <input type="hidden" asp-for="ImageUrl" />

    <section class="content-main">
        <div class="row">
            <div class="col-12">
                <div class="content-header d-flex justify-content-between align-items-center mb-3">
                    <h2 class="content-title mb-0">Cập nhật trạng thái sự kiện</h2>
                    <div class="d-flex gap-2">
                        <a asp-controller="Auth" asp-action="GetStaffList" class="btn btn-outline-secondary">
                            ← Quay lại
                        </a>
                        <button type="submit" class="btn btn-success">
                            Cập nhật
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow-sm mb-4">
                    <div class="card-header text-white" style="background-color: #3BB77E;">
                        <h5 class="mb-0" style="color: white;">Thông tin sự kiện</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">Trạng thái</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Open">Open</option>
                                <option value="Close">Close</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
