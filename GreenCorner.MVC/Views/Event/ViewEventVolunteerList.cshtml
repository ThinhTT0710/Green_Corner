@model IEnumerable<EventVolunteerWithUserViewModel>

<div class="card shadow border-0 mt-4">
    <div class="row">
        <h2 class="content-title card-title">Volunteer List</h2>
    </div>
    <div class="card-body p-4">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light text-center">
                    <tr>
                        <th>Sự kiện</th>
                        <th>Họ tên</th>
                        <th>Trạng thái điểm danh</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                            <tr class="align-middle text-center">
                                <td>@item.Volunteer.CleanEventId</td>
                                <td>@item.User.FullName</td>
                                <td>
                                @{
                                    var status = item.Volunteer.AttendanceStatus;
                                    if (string.IsNullOrEmpty(status))
                                    {
                                                    <span class="text-muted">Chưa điểm danh</span>
                                    }
                                    else if (status == "Present")
                                    {
                                                    <span class="badge bg-success">Có mặt</span>
                                    }
                                    else if (status == "Absent")
                                    {
                                                    <span class="badge bg-danger">Vắng mặt</span>
                                    }
                                    else
                                    {
                                                    <span>@status</span>
                                    }
                                }
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-outline-danger btn-sm"
                                       asp-action="KickVolunteer"
                                       asp-route-userId="@item.Volunteer.UserId"
                                       asp-route-eventId="@item.Volunteer.CleanEventId"
                                       onclick="return confirm('Bạn có chắc chắn muốn loại tình nguyện viên này khỏi sự kiện?');">
                                        Kick
                                    </a>
                                <!-- Nút mở modal -->
                                <button type="button"
                                        class="btn btn-outline-success btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#confirmModal-@item.Volunteer.UserId">
                                    Thưởng Điểm
                                </button>

                                </td>
                            </tr>
                        <!-- Modal xác nhận thưởng điểm -->
                        <div class="modal fade" id="confirmModal-@item.Volunteer.UserId" tabindex="-1" aria-labelledby="modalLabel-@item.Volunteer.UserId" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <form asp-action="EarnPoints"
                                          asp-controller="PointTransaction"
                                          method="post">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalLabel-@item.Volunteer.UserId">Xác nhận thưởng điểm</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                        </div>
                                        <div class="modal-body">
                                            @{
                                                var calculatedPoints = item.Volunteer.IsTeamLeader == true ? item.Volunteer.PointsAwarded * 3 : item.Volunteer.PointsAwarded;
                                            }
                                            Bạn có chắc chắn muốn thưởng <strong>@calculatedPoints</strong> điểm cho tình nguyện viên <strong>@item.Volunteer.UserId</strong>?
                                        </div>
                                        <div class="modal-footer">
                                            <input type="hidden" name="userId" value="@item.Volunteer.UserId" />
                                            <input type="hidden" name="points" value="@calculatedPoints" />
                                            <input type="hidden" name="eventId" value="@item.Volunteer.CleanEventId" />
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                            <button type="submit" class="btn btn-success">Xác nhận</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


