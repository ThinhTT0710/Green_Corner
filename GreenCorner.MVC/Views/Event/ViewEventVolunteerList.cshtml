	@model IEnumerable<EventVolunteerDTO>

<div class="card shadow border-0 mt-4">
	<div class="row">
		<h2 class="content-title card-title">Volunteer List</h2>
	</div>
	<div class="card-body p-4">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-hover">
			<thead>
				<tr>
					<th>
						CleanEvent
					</th>
					<th>
						Rating
					</th>
					<th>
						Comment
					</th>
					<th class="text-end">Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.CleanEventId
						</td>
						<td>
							@item.UserId
						</td>
						<td>
							@item.AttendanceStatus
						</td>
						<td style="text-align:center">
							<a class="btn btn-danger" asp-action="KickVolunteer" asp-route-userId="@item.UserId" asp-route-eventId="@item.CleanEventId">
								Kick
							</a>	
						</td>
					</tr>
				}
				</tbody>
		</table
			</div>
		</div>
	</div>
</div>
