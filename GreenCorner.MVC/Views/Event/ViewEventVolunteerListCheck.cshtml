@model IEnumerable<GreenCorner.MVC.ViewModels.EventVolunteerWithUserViewModel>
@{
    ViewData["Title"] = "Điểm danh tình nguyện viên";
}
<div class="card shadow border-0 mt-4" style="padding: 30px;">
    <div class="row">
        <h2 class="content-title card-title">Điểm Danh</h2>
    </div>
    <div class="card-body p-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Sự kiện</th>
                            <th>Họ tên</th>
                            <th>Trạng thái điểm danh</th>
                            <th>Thao tác</th>
                            <th class="text-end"></th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Volunteer.CleanEventId</td>
                                <td>@item.User?.FullName</td>
                            @if (item.Volunteer.AttendanceStatus == "Present")
                                    {
                                    <td class="text-success">Có mặt</td>
                                    }
                                    else if (item.Volunteer.AttendanceStatus == "Absent")
                                    {
                                    <td class="text-danger">Vắng mặt</td>
                                    }
                                    else
                                    {
                                    <td class="text-warning">Chưa điểm danh</td>
                                    }
                                    <td class="text-center">
                                        @if (item.Volunteer.AttendanceStatus == "Present" || item.Volunteer.AttendanceStatus == "Absent")
                                        {
                                        <span class="text-success"><i class="bi bi-check-circle-fill"></i> Đã điểm danh</span>
                                        }
                                        else
                                        {
                                        <a class="btn btn-success btn-sm me-1"
                                           asp-action="AttendanceCheck"
                                           asp-route-userId="@item.Volunteer.UserId"
                                           asp-route-eventId="@item.Volunteer.CleanEventId"
                                           asp-route-check="True">
                                            Có mặt
                                        </a>
                                        <a class="btn btn-danger btn-sm"
                                           asp-action="AttendanceCheck"
                                           asp-route-userId="@item.Volunteer.UserId"
                                           asp-route-eventId="@item.Volunteer.CleanEventId"
                                           asp-route-check="False">
                                            Vắng mặt
                                        </a>
                                        }
                                </td>

                                <td class="text-end">
                                        @if (item.Volunteer.AttendanceStatus == "Present" || item.Volunteer.AttendanceStatus == "Absent")
                                        {
                                        <a class="btn btn-success btn-sm me-1"
                                                   asp-action="EditAttendance"
                                                   asp-route-userId="@item.Volunteer.UserId"
                                                   asp-route-eventId="@item.Volunteer.CleanEventId">
                                                    Sửa điểm danh
                                                </a>
                                        }
                                </td>
                            </tr>
                            }
                    </tbody>
                </table>
            </div>
            <a class="btn" asp-action="GetOpenEventsByTeamLeader" asp-controller="Event">Trở về</a>
        </div>
    </div>
</div>
