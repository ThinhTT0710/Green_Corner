@model EventReviewDTO
<div class="comment-form">
    <h3 class="mb-15">Delete Event Review</h3>
    <div class="row">
        <div class="col-lg-9 col-md-12">
            <form asp-controller="Event" asp-action="DeleteEventReview" enctype="multipart/form-data">
                <input hidden asp-for="EventReviewId" />
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <input asp-for="CleanEventId" disabled class="form-control" placeholder="EventId" />
                        </div>
                    </div>
                    <div class="col-12">
                        <div>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <input type="radio" disabled name="rating" id="star-@i" value="@i"
                                @(i == Model.Rating ? "checked" : "") style="display: none;" />
                                <label for="star-@i"
                                       style="font-size: 30px; color:@(i <= Model.Rating ? "orange" : "gray"); cursor: pointer;"
                                       onmouseover="highlightStars(@i)"
                                       onmouseout="resetStars()"
                                       onclick="selectStar(@i)">&#9733;</label>
                            }
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input asp-for="Comment" disabled class="form-control" placeholder="Comment" />
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input asp-for="CreatedAt" disabled class="form-control" placeholder="Date" />
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <a asp-controller="Event" asp-action="EventReviewHistory" class="button button-contactForm ">Back to List</a>
                    <button type="submit" class="button button-contactForm">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}