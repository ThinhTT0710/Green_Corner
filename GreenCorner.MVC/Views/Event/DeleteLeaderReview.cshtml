@model LeaderReviewDTO

<form asp-controller="Event" asp-action="DeleteLeaderReview" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Delete Leader Review</h1>
        <input hidden asp-for="LeaderReviewId" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Cleanup Event Id</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CleanEventId" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Leader Id</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="LeaderId" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Rating</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rating" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Comment</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Comment" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">CreatedAt</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CreatedAt" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-controller="Event" asp-action="EventReviewHistory" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />

            </div>
        </div>
        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}