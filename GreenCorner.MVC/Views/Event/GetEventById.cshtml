@model EventDTO
@{
    bool isVolunteer = ViewBag.IsVolunteer as bool? ?? false;
    bool isTeamLeader = ViewBag.IsTeamLeader as bool? ?? false;
    bool hasApprovedTeamLeader = ViewBag.HasApprovedTeamLeader as bool? ?? false;
    string approvedRole = ViewBag.ApprovedRole as string ?? "";
    int current = ViewBag.ParticipantCurrent ?? 0;
    int max = ViewBag.ParticipantMax ?? 0;
    bool isFull = ViewBag.IsFull as bool? ?? false;
    ViewData["Title"] = "Sự kiện";
}

<section class="content-main">
    <div class="row" style="margin: 30px 10px;">
        <div class="col-12">
            <div class="content-header mb-3">
                <h2 class="content-title text-center">Chi tiết sự kiện</h2>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header text-white" style="background-color: #3BB77E;">
                    <h5 class="mb-0" style="color: white;">Thông tin chi tiết sự kiện</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Mã sự kiện</label>
                            <div class="form-control bg-light">@Model.CleanEventId</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Tiêu đề</label>
                            <div class="form-control bg-light">@Model.Title</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ngày bắt đầu</label>
                            <div class="form-control bg-light">@Model.StartDate?.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Thới gian</label>
                            <div class="form-control bg-light">@Model.StartDate?.ToString("HH:mm") - @Model.EndDate?.ToString("HH:mm")</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Trạng thái</label>
                            <div class="form-control bg-light">
                                @{
                                    string statusDisplay = Model.Status switch
                                    {
                                        "Open" => "Đang mở",
                                        "Close" => "Đã đóng",
                                        _ => "Không xác định"
                                    };
                                }
                                @statusDisplay
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Số lượng tham gia</label>
                            <div class="form-control bg-light">
                                @current / @max người đã đăng ký
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Địa điểm</label>
                            <div class="form-control bg-light">@Model.Address</div>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Hình ảnh</label>

                            @{
                                var imagePaths = Model.ImageUrl?.Split('&') ?? Array.Empty<string>();
                                var carouselId = "eventCarousel";
                            }

                            @if (imagePaths.Length > 0)
                            {
                                <div id="@carouselId" class="carousel slide mb-4" data-bs-ride="carousel" style="max-height: 400px; overflow: hidden;">
                                    <div class="carousel-inner">
                                        @for (int i = 0; i < imagePaths.Length; i++)
                                        {
                                            var img = imagePaths[i];
                                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                                <img src="@img" class="border-radius-15 d-block w-100" alt="Ảnh sự kiện" style="max-height: 400px; object-fit: cover;" />
                                            </div>
                                        }
                                    </div>
                                    @if (imagePaths.Length > 1)
                                    {
                                        <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Trước</span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Tiếp</span>
                                        </button>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="form-control bg-light">Không có hình ảnh</div>
                            }
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-bold">Mô tả</label>
                            <div class="form-control bg-light" style="min-height: 150px; white-space: pre-line;">@Model.Description</div>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Điểm thưởng</label>
                            <div class="fs-5 badge bg-success px-3 py-2">@Model.PointsAward điểm</div>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(approvedRole))
            {
                var roleName = approvedRole switch
                {
                    "Volunteer" => "Tình nguyện viên",
                    "TeamLeader" => "Đội trưởng",
                    _ => approvedRole
                };

                <div class="alert alert-success text-center">
                    Bạn đã được phê duyệt làm: <strong>@roleName</strong>
                </div>
            }

            @if (hasApprovedTeamLeader && isTeamLeader)
            {
                <div class="alert alert-info text-center">
                    Sự kiện này đã có đội trưởng được duyệt. Bạn chỉ có thể đăng ký làm tình nguyện viên.
                </div>
            }
        </div>


        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="mb-3">Thao tác đăng ký</h5>
                    @if (approvedRole == "TeamLeader")
                    {
                        
                        <div class="d-flex justify-content-start gap-2 mt-2">
                            <a asp-action="ViewEventVolunteerList"
                               asp-route-eventId="@Model.CleanEventId"
                               class="btn btn-sm btn-outline-primary">
                                Tình nguyện viên <i class="fi-rs-arrow-small-right ms-1"></i>
                            </a>

                            <a asp-action="ViewEventVolunteerListCheck"
                               asp-route-eventId="@Model.CleanEventId"
                               class="btn btn-sm btn-outline-success">
                                Điểm Danh <i class="fi-rs-arrow-small-right ms-1"></i>
                            </a>
                            <a asp-controller="BlogPost"
                               asp-action="SubmitReport"
                               asp-route-title="@Model.Title"
                               class="btn btn-sm btn-outline-danger">
                                Gửi Báo cáo <i class="fi fi-rs-warning ms-1"></i>
                            </a>
                        </div>
                        <a asp-controller="Event"
                           asp-action="GetOpenEventsByTeamLeader"
                           asp-route-userId="@User.Claims.FirstOrDefault(c => c.Type == "sub")?.Value"
                           class="btn btn-primary w-100 mt-3">
                            Xem sự kiện đang phụ trách
                        </a>
                    }

                    @if (string.IsNullOrEmpty(approvedRole))
                    {
                        if (isFull && !isVolunteer && !isTeamLeader)
                        {
                            <div class="alert alert-warning text-center">
                                Sự kiện đã đủ số lượng đăng ký (@current / @max).
                            </div>
                        }
                        else
                        {
                            if (!isVolunteer && !isTeamLeader)
                            {
                                <a asp-controller="Event"
                                   asp-action="RegisterVolunteer"
                                   asp-route-eventId="@Model.CleanEventId"
                                   class="btn btn-success w-100 mb-2">
                                    Đăng ký Tình nguyện viên
                                </a>

                                @if (!hasApprovedTeamLeader)
                                {
                                    <a asp-controller="Event"
                                       asp-action="RegisterTeamLeader"
                                       asp-route-eventId="@Model.CleanEventId"
                                       class="btn btn-warning w-100">
                                        Đăng ký Đội trưởng
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary w-100" disabled>
                                        Đã có Đội trưởng được duyệt
                                    </button>
                                }
                            }
                            else if (isVolunteer)
                            {
                                <a asp-controller="Event"
                                   asp-action="UpdateRegister"
                                   asp-route-eventId="@Model.CleanEventId"
                                   class="btn btn-info w-100 mb-2">
                                    Cập nhật đăng ký Tình nguyện viên
                                </a>
                                <button type="button" class="btn btn-outline-danger w-100"
                                        data-bs-toggle="modal" data-bs-target="#unregisterVolunteerModal">
                                    Hủy đăng ký Tình nguyện viên
                                </button>
                                <!-- Modal xác nhận hủy đăng ký Tình nguyện viên -->
                                <div class="modal fade" id="unregisterVolunteerModal" tabindex="-1" aria-labelledby="unregisterVolunteerModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="unregisterVolunteerModalLabel">Xác nhận hủy đăng ký</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                            </div>
                                            <div class="modal-body">
                                                Bạn có chắc chắn muốn hủy đăng ký Tình nguyện viên không?
                                            </div>
                                            <div class="modal-footer">
                                                <form asp-controller="Event" asp-action="UnregisterVolunteer" method="post">
                                                    <input type="hidden" name="eventId" value="@Model.CleanEventId" />
                                                    <button type="submit" class="btn btn-danger" style=" font-weight: 700; font-size: 14px; padding: 12px 30px; ">Hủy đăng ký</button>
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style=" border-radius: 10px; ">Hủy bỏ</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }
                            else if (isTeamLeader)
                            {
                                <a asp-controller="Event"
                                   asp-action="UpdateRegister"
                                   asp-route-eventId="@Model.CleanEventId"
                                   class="btn btn-info w-100 mb-2">
                                    Cập nhật đăng ký Đội trưởng
                                </a>
                                <button type="button" class="btn btn-outline-warning w-100"
                                        data-bs-toggle="modal" data-bs-target="#unregisterTeamLeaderModal">
                                    Hủy đăng ký Đội trưởng
                                </button>

                                <!-- Modal xác nhận hủy đăng ký Đội trưởng -->
                                <div class="modal fade" id="unregisterTeamLeaderModal" tabindex="-1" aria-labelledby="unregisterTeamLeaderModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="unregisterTeamLeaderModalLabel">Xác nhận hủy đăng ký</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                            </div>
                                            <div class="modal-body">
                                                Bạn có chắc chắn muốn hủy đăng ký Đội trưởng không?
                                            </div>
                                            <div class="modal-footer">
                                                <form asp-controller="Event" asp-action="UnregisterTeamLeader" method="post">
                                                    <input type="hidden" name="eventId" value="@Model.CleanEventId" />
                                                    <button type="submit" class="btn btn-warning" style=" font-weight: 700; font-size: 14px; padding: 12px 30px; ">Hủy đăng ký</button>
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style=" border-radius: 10px; ">Hủy bỏ</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }
                        }
                    }
                </div>
                
            </div>
             @if (approvedRole == "TeamLeader" || approvedRole == "Volunteer")
                    {
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                        <div class="text-center">
                            <a href="/Chat?eventId=@Model.CleanEventId" class="btn btn-outline-primary w-100">
                                Trò chuyện với sự kiện <i class="fi fi-rs-comment ms-1"></i>
                            </a>
                        </div>
                </div>
            </div>
            }

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="mt-4 text-center">
                        <a asp-controller="Event" asp-action="Index" class="btn btn-outline-secondary">
                            ← Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
