@model EventDTO

<form asp-controller="Event" asp-action="UpdateCleanupEvent" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Edit Event Review</h1>
        <input hidden asp-for="CleanEventId" />
        <input hidden asp-for="CreatedAt" />
        <input hidden asp-for="Status" />
        <input hidden asp-for="EndDate" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Title</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">MaxParticipants</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MaxParticipants" class="form-control" />
                <span asp-validation-for="MaxParticipants" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">StartDate</label>
            </div>
            <div class="col-10 pb-3">
                <input type="date" asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">

                <a asp-controller="Event" asp-action="Index" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />

            </div>
        </div>
        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}