@model VoucherDTO

@{
    ViewData["Title"] = "Chi tiết Reward";
}

<section class="content-main">
    <div class="row">
        <div class="col-12">
            <div class="content-header mb-4">
                <h2 class="content-title">@ViewData["Title"]</h2>
            </div>
        </div>

        <!-- Phần trái -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <!-- Title -->
                    <div class="mb-4">
                        <label class="form-label">Tiêu đề voucher</label>
                        <input class="form-control" value="@Model.Title" readonly />
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <label class="form-label">Mô tả</label>
                        <textarea class="form-control" style="min-height: 150px;" readonly>@Model.Description</textarea>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Địa chỉ</label>
                        <input class="form-control text-uppercase fw-semibold text-success" value="@Model.Address" readonly />
                    </div>

                    <!-- Points -->
                    <div class="mb-4">
                        <label class="form-label">Điểm yêu cầu</label>
                        <input class="form-control" value="@Model.PointsRequired" readonly />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Số lượng</label>
                        <input class="form-control" value="@Model.Quantity" readonly />
                    </div>

                    <!-- Start Date -->
                    <div class="mb-4">
                        <label class="form-label">Ngày bắt đầu</label>
                        <input class="form-control" value="@Model.StartDate?.ToString("dd/MM/yyyy HH:mm")" readonly />
                    </div>


                    <!-- Expiration -->
                    <div class="mb-4">
                        <label class="form-label">Ngày hết hạn</label>
                        <input class="form-control" value="@Model.ExpirationDate?.ToString("dd/MM/yyyy HH:mm")" readonly />
                    </div>
                </div>
            </div>


        </div>

        <!-- Phần phải -->
        <div class="col-lg-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="mb-3 text-success">🎯 Thao tác</h5>
                    <p class="text-muted">Bạn có thể xem chi tiết voucher hoặc quay lại danh sách voucher.</p>

                    <!-- Nút Đổi điểm -->
                    <!-- Nút mở modal -->
                    <button type="button"
                            class="btn btn-lg btn-success w-100 mb-2"
                            data-bs-toggle="modal"
                            data-bs-target="#confirmRedeemModal">
                        Đổi @Model.PointsRequired điểm
                    </button>


                    <!-- Nút quay lại -->
                    <a asp-action="Index"
                       class="btn btn-outline-secondary w-100 rounded font-sm text-body hover-up">
                        ← Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>

    </div>
</section>
<!-- Modal xác nhận đổi điểm -->
<div class="modal fade" id="confirmRedeemModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-white" style="background-color: #3BB77E;">
                <h5 class="modal-title text-white" id="confirmModalLabel">Xác nhận đổi điểm</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc muốn đổi <strong>@Model.PointsRequired</strong> điểm để nhận voucher <strong>@Model.Title</strong> không?
            </div>
            <div class="modal-footer">
                <form asp-action="ExchangePoints" asp-controller="PointTransaction" method="post">
                    <input type="hidden" name="points" value="@Model.PointsRequired" />
                    <input type="hidden" name="voucherId" value="@Model.VoucherId" />
                    <button type="submit" class="btn btn-success">Xác nhận đổi</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Huỷ</button>
                </form>
            </div>
        </div>
    </div>
</div>
