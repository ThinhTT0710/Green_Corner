@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model VoucherDTO

@{
    ViewData["Title"] = "Chi tiết voucher";
}

<section class="content-main">
    <div class="row">
        <div class="col-12">
            <div class="content-header mb-4">
                <h2 class="content-title">@ViewData["Title"]</h2>
            </div>
        </div>

        <!-- Phần trái -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <!-- Tiêu đề -->
                    <div class="mb-4">
                        <label class="form-label">Tiêu đề voucher</label>
                        <input class="form-control" value="@Model.Title" readonly />
                    </div>

                    <!-- Mã khuyến mãi -->
                    <div class="mb-4">
                        <label class="form-label">Mã khuyến mãi</label>
                        <input class="form-control text-uppercase" value="@Model.Code" readonly />
                    </div>

                    <!-- Mô tả -->
                    <div class="mb-4">
                        <label class="form-label">Mô tả</label>
                        <textarea class="form-control" style="min-height: 150px;" readonly>@Model.Description</textarea>
                    </div>

                    <!-- Điểm -->
                    <div class="mb-4">
                        <label class="form-label">Điểm yêu cầu</label>
                        <input class="form-control" value="@Model.PointsRequired" readonly />
                    </div>

                    <!-- Số lượng -->
                    <div class="mb-4">
                        <label class="form-label">Số lượng</label>
                        <input class="form-control" value="@Model.Quantity" readonly />
                    </div>

                    <!-- Địa chỉ -->
                    <div class="mb-4">
                        <label class="form-label">Địa chỉ</label>
                        <input class="form-control" value="@Model.Address ?? " Không có địa chỉ"" readonly />
                    </div>

                    <!-- Trạng thái hoạt động -->
                    <div class="mb-4">
                        <label class="form-label">Trạng thái hoạt động</label>
                        <input class="form-control" value="@(Model.IsActive ? "Có" : "Không")" readonly />
                    </div>

                    <!-- Ngày bắt đầu -->
                    <div class="mb-4">
                        <label class="form-label">Ngày bắt đầu</label>
                        <input class="form-control" value="@Model.StartDate?.ToString("dd/MM/yyyy HH:mm")" readonly />
                    </div>

                    <!-- Ngày hết hạn -->
                    <div class="mb-4">
                        <label class="form-label">Ngày hết hạn</label>
                        <input class="form-control" value="@Model.ExpirationDate?.ToString("dd/MM/yyyy HH:mm")" readonly />
                    </div>
                </div>
            </div>
        </div>

        <!-- Phần phải -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5>Thao tác</h5>
                    <p class="text-muted mt-2">Bạn có thể chỉnh sửa hoặc quay lại danh sách voucher.</p>
                    <div>
                        <a asp-action="Edit" asp-route-voucherId="@Model.VoucherId" class="btn btn-warning rounded font-sm hover-up">Chỉnh sửa</a>
                        <a asp-action="Index" class="btn btn-light rounded font-sm text-body hover-up ms-2">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
