@model ProductDTO
@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<form asp-controller="Product" asp-action="DeleteProduct" method="post" enctype="multipart/form-data">
    <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">@ViewData["Title"]</h2>
                </div>
            </div>

            <div class="col-lg-8">
                <!-- Hidden fields -->
                <input type="hidden" asp-for="ProductId" />

                <!-- Product Information -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">Tên sản phẩm</label>
                            <input asp-for="Name" class="form-control" disabled />
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" style="min-height: 300px;" disabled></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">Giá</label>
                                <input asp-for="Price" class="form-control" disabled />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Discount" class="form-label">Giảm giá (%)</label>
                                <input asp-for="Discount" class="form-control" disabled />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Quantity" class="form-label">Số lượng</label>
                                <input asp-for="Quantity" class="form-control" disabled />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label">Danh mục</label>
                                <input asp-for="Category" class="form-control" disabled />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Brand" class="form-label">Thương hiệu</label>
                                <input asp-for="Brand" class="form-control" disabled />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Origin" class="form-label">Xuất xứ</label>
                                <input asp-for="Origin" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Current Images -->
                <div class="card mb-4">
                    <div class="card-body">
                        <label class="form-label">Ảnh hiện tại</label>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="d-flex gap-2 flex-wrap">
                                @foreach (var img in Model.ImageUrl.Split('&'))
                                {
                                    <img src="@img" style="height: 100px; border: 1px solid #ccc; padding: 2px;" />
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">Không có ảnh</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Confirm Delete -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5>Xác nhận xóa</h5>
                        <p class="text-danger mt-2">
                            Bạn có chắc chắn muốn xóa sản phẩm này không? Hành động này không thể hoàn tác.
                        </p>
                        <div class="d-flex justify-content-between mt-15">
                            <a asp-action="ViewAllProduct" asp-controller="SaleStaff" class="btn btn-light rounded font-sm text-body hover-up">Quay lại</a>
                            <button type="submit" class="btn btn-danger rounded font-sm hover-up">Xóa</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
