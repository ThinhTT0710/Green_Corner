@model ProductDTO
@{
    ViewData["Title"] = "Tạo sản phẩm mới";
}

<form asp-controller="Product" asp-action="CreateNewProduct" method="post" enctype="multipart/form-data">
    <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">@ViewData["Title"]</h2>
                </div>
            </div>

            <div class="col-lg-8">
                <!-- Product Information -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">Tên sản phẩm</label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" style="min-height: 300px;" placeholder="Mô tả sản phẩm..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">Giá</label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Discount" class="form-label">Giảm giá (%)</label>
                                <input asp-for="Discount" class="form-control" />
                                <span asp-validation-for="Discount" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Quantity" class="form-label">Số lượng</label>
                                <input asp-for="Quantity" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label">Danh mục</label>
                                <input asp-for="Category" class="form-control" />
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Brand" class="form-label">Thương hiệu</label>
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Origin" class="form-label">Xuất xứ</label>
                                <input asp-for="Origin" class="form-control" />
                                <span asp-validation-for="Origin" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Upload Image -->
                <div class="card mb-4">
                    <div class="card-body">
                        <label class="form-label">Ảnh sản phẩm</label>
                        <input type="file" name="images" class="form-control" multiple />
                        <span class="text-danger">@Html.ValidationMessage("Images")</span>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Additional Info -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5>Thông tin hệ thống</h5>
                        <p class="text-muted mt-2">
                            Ảnh sản phẩm có thể chọn nhiều tệp. Sau khi tạo thành công, sản phẩm sẽ hiển thị ở trang quản lý.
                        </p>
                        <div class="d-flex justify-content-between mt-15">
                            <a asp-action="ViewAllProduct" asp-controller="SaleStaff" class="btn btn-light rounded font-sm mr-2 text-body hover-up">Quay lại</a>
                            <button type="submit" class="btn btn-md rounded font-sm hover-up btn-success">Tạo sản phẩm</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
