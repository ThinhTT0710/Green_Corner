@model ProductDTO
@{
    ViewData["Title"] = "Tạo sản phẩm mới";
    Layout = "_LayoutAdmin";
}
<form asp-controller="Product" asp-action="CreateNewProduct" method="post" enctype="multipart/form-data">
<section class="content-main">
    <div class="row">
        <div class="col-9">
            <div class="content-header">
                <h2 class="content-title">Thêm mới sản phẩm</h2>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Basic</h4>
                </div>
                <div class="card-body">
                        <div class="mb-4">
                            <label for="product_name" class="form-label">Tên sản phẩm</label>
                            <input type="text" asp-for="Name" placeholder="Nhập tên sản phẩm..."
                                   class="form-control" id="product_name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label">Giá</label>
                                    <div class="row gx-2">
                                        <input asp-for="Price" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label">Giảm giá</label>
                                    <input asp-for="Discount" class="form-control" />
                                    <span asp-validation-for="Discount" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label">Số lượng</label>
                                    <div class="row gx-2">
                                        <input asp-for="Quantity" class="form-control" />
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label">Danh mục</label>
                                    <input asp-for="Category" class="form-control" />
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label">Thương hiệu</label>
                                    <div class="row gx-2">
                                        <input asp-for="Brand" class="form-control" />
                                        <span asp-validation-for="Brand" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label class="form-label">Xuất xứ</label>
                                    <input asp-for="Origin" class="form-control" />
                                    <span asp-validation-for="Origin" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" id="Description"
                                      placeholder="Mô tả sản phẩm..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-md rounded font-sm hover-up float-end">Tạo</button>
                </div>
            </div>
            <!-- card end// -->
        </div>
        <div class="col-lg-5">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Hình ảnh</h4>
                </div>
                <div class="card-body">
                    <div class="input-upload">
                        <img src="~/admin/imgs/theme/upload.svg" alt="" />
                        <input type="file" name="images" class="form-control" multiple style="padding: 10px;" />
                        <span class="text-danger">@Html.ValidationMessage("Images")</span>
                    </div>
                </div>
            </div>
            <!-- card end// -->
        </div>
    </div>
    </section>
</form>
@section Scripts {
    <script src="https://cdn.tiny.cloud/1/m6bply9e13ptsbjhe1z2g0kpwrtvq2lq163iqj7jqeorjvyl/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: [
                'anchor', 'autolink', 'charmap', 'codesample', 'emoticons', 'image', 'link', 'lists', 'media', 'searchreplace', 'table', 'visualblocks', 'wordcount',
                'checklist', 'mediaembed', 'casechange', 'formatpainter', 'pageembed', 'a11ychecker', 'tinymcespellchecker', 'permanentpen', 'powerpaste', 'advtable', 'advcode', 'editimage', 'advtemplate', 'ai', 'mentions', 'tinycomments', 'tableofcontents', 'footnotes', 'mergetags', 'autocorrect', 'typography', 'inlinecss', 'markdown', 'importword', 'exportword', 'exportpdf'
            ],
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            mergetags_list: [
                { value: 'First.Name', title: 'First Name' },
                { value: 'Email', title: 'Email' },
            ],
            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject('See docs to implement AI Assistant')),
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
