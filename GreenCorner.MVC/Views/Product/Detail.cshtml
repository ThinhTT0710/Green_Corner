@model ProductDTO
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "_LayoutCart";
}﻿
<div class="container mb-30">
    <div class="row">
        <div class="col-xl-10 col-lg-12 m-auto">
            <div class="product-detail accordion-detail">
                <div class="row mb-50 mt-30">
                    <div class="col-md-6 col-sm-12 col-xs-12 mb-md-0 mb-sm-5">
                        <div class="detail-gallery">
                            <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                            <!-- MAIN SLIDES -->

                            <div class="product-image-slider">
                                @{
                                    var listImages = Model.ImageUrl.Split('&');
                                    int index = 1;

                                    foreach (var image in listImages)
                                    {
                                        <figure class="border-radius-10">
                                            <img src="@image" alt="product-@index" />
                                        </figure>
                                    }
                                    index++;
                                }
                            </div>


                            <!-- THUMBNAILS -->
                            <div class="slider-nav-thumbnails">
                                @{
                                    int indexx = 1;
                                    foreach (var image in listImages)
                                    {
                                        <div><img src="@image" alt="product image" /></div>
                                        indexx++;
                                    }
                                }
                            </div>

                        </div>
                        <!-- End Gallery -->
                    </div>
                    @{
                        int price = (int)Model.Price;
                        int priceDiscount = price - (Model.Discount.HasValue ? (price * Model.Discount.Value / 100) : 0);
                    }
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <div class="detail-info pr-30 pl-30">
                            <span class="stock-status out-stock"> Sale Off </span>
                            <h2 class="title-detail">@Model.Name</h2>
                            <div class="clearfix product-price-cover">
                                <div class="product-price primary-color float-left">
                                    <span class="current-price text-brand">@priceDiscount.ToString("N0", new
                                                                                CultureInfo("vi-VN"))đ</span>
                                    <span>
                                        <span class="save-price font-md color3 ml-15">@Model.Discount% Off</span>
                                        <span class="old-price font-md ml-15">@Model.Price.ToString("N0", new
                                                                                        CultureInfo("vi-VN"))đ</span>
                                    </span>
                                </div>
                            </div>
                            <div class="detail-extralink mb-20">
                                <div class="detail-qty border radius">
                                    <a href="#" class="qty-down qty-down-detail" data-product-id="@Model.ProductId"><i class="fi-rs-angle-small-down"></i></a>
                                    <input type="text" name="quantity" class="qty-val qty-val-detail" value="1" min="1" data-product-id="@Model.ProductId">
                                    <a href="#" class="qty-up qty-up-detail" data-product-id="@Model.ProductId"><i class="fi-rs-angle-small-up"></i></a>
                                </div>
                                <div class="product-extra-link2">
                                    <button type="submit" class="button button-add-to-cart-detail" data-product-id="@Model.ProductId">
                                        <i class="fi-rs-shopping-cart"></i>Add to cart</button>
                                    <a aria-label="Add To Wishlist" class="action-btn hover-up"
                                        href="shop-wishlist.html"><i class="fi-rs-heart"></i></a>
                                </div>
                            </div>
                            <div class="font-xl">
                                <ul class="mr-50 float-start">
                                    <li class="mb-5">Category: <span class="text-brand">@Model.Category</span></li>
                                    <li class="mb-5">Brand:<span class="text-brand"> @Model.Brand</span></li>
                                    <li>Ogirin: <span class="text-brand">@Model.Origin</span></li>
                                </ul>
                                <ul class="float-start">
                                    <li class="mb-5">Discount: <a href="#">@Model.Discount</a></li>
                                    <li>Stock:<span class="in-stock text-brand ml-5">@Model.Quantity Items In
                                            Stock</span></li>
                                </ul>
                            </div>
                        </div>
                        <!-- Detail Info -->
                    </div>
                </div>
                <div class="product-info">
                    <div class="tab-style3">
                        <ul class="nav nav-tabs text-uppercase">
                            <li class="nav-item">
                                <a class="nav-link active" id="Description-tab" data-bs-toggle="tab"
                                    href="#Description">Description</a>
                            </li>
                        </ul>
                        <div class="tab-content shop_info_tab entry-main-content">
                            <div class="tab-pane fade show active" id="Description">
                                <div class="">
                                    <h5 class="mt-10">@Model.Description</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>