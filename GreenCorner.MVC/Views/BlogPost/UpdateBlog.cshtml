@model GreenCorner.MVC.Models.BlogPostDTO

@{
    ViewData["Title"] = "Cập nhật bài viết";
}

<section class="content-main">
    <form asp-action="UpdateBlog" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="BlogId" />
        <input type="hidden" asp-for="AuthorId" />
        <input type="hidden" asp-for="ThumbnailUrl" />
        <input type="hidden" asp-for="Status" />

        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title mb-4">Cập nhật bài viết</h2>
                </div>
            </div>

            <!-- Phần trái -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label">Tiêu đề</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Content" class="form-label">Nội dung</label>
                            <textarea asp-for="Content" class="form-control" style="min-height: 300px;"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <label class="form-label">Ảnh thumbnail mới (nếu có)</label>
                        <input type="file" name="images" multiple class="form-control" />
                        <span class="text-danger">@Html.ValidationMessage("Image")</span>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                {
                    <div class="mb-3">
                        <label>Ảnh thumbnail hiện tại:</label>
                        <div class="d-flex gap-2 flex-wrap">
                            @foreach (var img in Model.ThumbnailUrl.Split("&", StringSplitOptions.RemoveEmptyEntries))
                            {
                                <img src="@img" style="max-height: 150px; border: 1px solid #ccc; padding: 4px;" />
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Phần phải -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <label class="form-label">Trạng thái</label>
                        <div class="form-control-plaintext">
                            @if (Model.Status == "Published")
                            {
                                <span class="badge bg-success">Đã đăng</span>
                            }
                            else if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Đang chờ duyệt</span>
                            }
                            else if (Model.Status == "Removed")
                            {
                                <span class="badge bg-danger">Đã gỡ</span>
                            }
                            else
                            {
                                <span class="badge bg-dark">Không xác định</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <h5>Thông tin hệ thống</h5>
                        <p class="text-muted mt-2">
                            Bài viết sẽ được cập nhật dưới tên của bạn. Ảnh thumbnail sẽ được tự động lưu.
                        </p>
                        <div>
                            <button type="submit" class="btn btn-md rounded font-sm hover-up">Cập nhật</button>
                            <a asp-action="Index" class="btn btn-light rounded font-sm text-body hover-up ms-2">Hủy</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <script src="https://cdn.tiny.cloud/1/m6bply9e13ptsbjhe1z2g0kpwrtvq2lq163iqj7jqeorjvyl/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea[name="Content"]', // chỉ áp dụng cho Content
            plugins: [
                'anchor', 'autolink', 'charmap', 'codesample', 'emoticons', 'image', 'link', 'lists', 'media',
                'searchreplace', 'table', 'visualblocks', 'wordcount', 'checklist', 'mediaembed', 'casechange',
                'formatpainter', 'pageembed', 'a11ychecker', 'tinymcespellchecker', 'permanentpen', 'powerpaste',
                'advtable', 'advcode', 'editimage', 'advtemplate', 'mentions', 'tableofcontents', 'footnotes',
                'mergetags', 'autocorrect', 'typography', 'inlinecss', 'markdown', 'importword', 'exportword', 'exportpdf'
            ],
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Tác giả',
            height: 400
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
