@model GreenCorner.MVC.Models.BlogReportDTO

@{
    ViewData["Title"] = "Báo cáo bài viết";
}

<h2 class="mb-4">@ViewData["Title"]</h2>


<form asp-action="CreateReport" method="post">
    <input type="hidden" asp-for="BlogId" />

    <div class="mb-3">
        <label asp-for="Reason" class="form-label">Lý do báo cáo</label>
        <textarea asp-for="Reason" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-danger">Gửi báo cáo</button>
    <a asp-action="ViewBlogDetail" asp-controller="BlogPost" asp-route-id="@Model.BlogId" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
