
@model List<GreenCorner.MVC.Models.BlogReportDTO>

@{
    ViewData["Title"] = "Danh sách báo cáo";
    var userId = ViewBag.UserId as string;
    int blogId = ViewBag.BlogId;
}

<main class="main">
    <div class="page-header mt-30 mb-75">
        <div class="container">
            <div class="archive-header">
                <div class="row align-items-center">
                    <div class="col-xl-4">
                        <h1 class="mb-15">@ViewData["Title"]</h1>
                        <div class="breadcrumb">
                            <a href="index.html" rel="nofollow"><i class="fi-rs-home mr-5"></i>Home</a>
                            <span></span> Blog & News
                        </div>
                    </div>
                    <div class="col-xl-8 text-end d-none d-xl-block">
                        <ul class="tags-list">
                            <li class="hover-up"><a asp-action="Index"><i class="fi-rs-arrow-left mr-10"></i>Quay Lại</a></li>
                            <li class="hover-up"><a asp-action="CreateBlog"><i class="fi-rs-edit mr-10"></i>Tạo Bài Viết</a></li>
                            <li class="hover-up"><a asp-action="MyFavoriteBlogs"><i class="fi-rs-heart  mr-10"></i>Bài Viết Yêu Thích</a></li>
                            <li class="hover-up mr-0"><a asp-action="MyPendingBlogs"><i class="fi-rs-cross mr-10"></i>Bài Viết Chờ Duyệt</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-content mb-50">
        <div class="container">
            <div class="row">
                <div class="shop-product-fillter mb-50 pr-30">
                    <div class="totall-product">
                        <h2>
                            <img class="w-36px mr-10" src="assets/imgs/theme/icons/category-1.svg" alt="" />
                            Nội Dung Báo Cáo
                        </h2>
                    </div> 
                </div>
                @if (Model != null && Model.Any())
                {
                    <div class="loop-grid pr-30">
                        <div class="row">
                            @foreach (var report in Model)
                            {
                                var authors = ViewBag.ReportAuthors as Dictionary<string, GreenCorner.MVC.Models.UserDTO>;
                                string reporterName = authors != null && authors.ContainsKey(report.UserId)
                                ? authors[report.UserId].FullName
                                : "Ẩn danh";

                                <article class="col-xl-4 col-lg-6 col-md-6 text-center hover-up mb-30 animated">
                                    <div class="entry-content-2 p-4 border border-warning rounded bg-light shadow-sm h-100 d-flex flex-column justify-content-between">

                                        <div class="d-flex justify-content-between align-items-center mb-3 text-start">
                                            <span class="text-muted">
                                                <i class="far fa-user me-1 text-primary"></i><strong>@reporterName</strong>
                                            </span>
                                            <span class="text-muted">
                                                <i class="far fa-clock me-1"></i>@report.CreatedAt?.ToString("dd/MM/yyyy HH:mm")
                                            </span>
                                        </div>

                                        <div class="text-start">
                                            <p class="mb-0 text-dark fs-5 fw-semibold fst-italic  bg-opacity-10 p-3 rounded">
                                                @report.Reason
                                            </p>
                                        </div>

                                        @if (!string.IsNullOrEmpty(userId) && report.UserId == userId)
                                        {
                                            <div class="mt-3 text-start">
                                                <button type="button"
                                                        class="btn btn-sm btn-outline-primary btn-edit-report"
                                                        data-report-id="@report.BlogReportId"
                                                        data-blog-id="@report.BlogId"
                                                        data-reason="@report.Reason"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#editReportModal">
                                                    <i class="fas fa-edit me-1"></i>Chỉnh sửa
                                                </button>
                                            </div>
                                        }
                                    </div>
                                </article>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        Không có báo cáo nào cho bài viết này.
                    </div>
                }

            </div>
        </div>
    </div>
</main>

<div class="mt-3">
    @if (!string.IsNullOrEmpty(ViewBag.UserId as string))
    {
        <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" data-bs-target="#reportModal">
            + Thêm báo cáo
    </button>
    }
    <a asp-action="ViewBlogDetail" asp-controller="BlogPost" asp-route-id="@blogId" class="btn btn-secondary">
        Quay lại bài viết
    </a>

</div>

<div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="reportForm" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="reportModalLabel">Báo cáo bài viết</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="BlogId" value="@blogId" />
                    <input type="hidden" name="UserId" value="@userId" />
                    <div class="mb-3">
                        <label for="Reason" class="form-label">Lý do báo cáo</label>
                        <textarea class="form-control" name="Reason" id="Reason" style="min-height: 200px;"></textarea>
                        <div class="text-danger" id="reason-error"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger" style=" font-weight: 700; font-size: 14px; padding: 12px 30px;">Gửi báo cáo</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 10px;">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editReportModal" tabindex="-1" aria-labelledby="editReportModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="editReportForm" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="editReportModalLabel">Chỉnh sửa báo cáo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="BlogReportId" id="editReportId" />
                    <input type="hidden" name="BlogId" id="editBlogId" value="@blogId" />
                    <div class="mb-3">
                        <label for="editReason" class="form-label">Lý do báo cáo</label>
                        <textarea class="form-control" name="Reason" id="editReason" style="min-height: 200px;"></textarea>
                        <div class="text-danger" id="edit-reason-error"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" style=" font-weight: 700; font-size: 14px; padding: 12px 30px;" >Cập nhật</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 10px;">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {     
            $('#reportForm').submit(function (e) {
                e.preventDefault();

                var formData = {
                    BlogId: $('input[name="BlogId"]').val(),
                    UserId: $('input[name="UserId"]').val(),
                    Reason: $('#Reason').val()
                };

                $('#reason-error').text('');

                $.ajax({
                    url: '/BlogPost/CreateReport',
                    method: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.isSuccess) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công',
                                text: 'Đã gửi báo cáo!'
                            }).then(() => location.reload());
                        } else {
                            if (response.errors && response.errors.Reason) {
                                $('#reason-error').text(response.errors.Reason);
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Thất bại',
                                    text: response.message || 'Đã có lỗi xảy ra.'
                                });
                            }
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: 'Không thể gửi báo cáo.'
                        });
                    }
                });
            });

            $(".btn-edit-report").click(function () {
                var reportId = $(this).data("report-id");
                var blogId = $(this).data("blog-id");
                var reason = $(this).data("reason");

                $("#editReportId").val(reportId);
                $("#editBlogId").val(blogId);
                $("#editReason").val(reason);
                $("#edit-reason-error").text('');
            });

            $("#editReportForm").submit(function (e) {
                e.preventDefault();

                var formData = {
                    BlogReportId: $("#editReportId").val(),
                    BlogId: $("#editBlogId").val(),
                    Reason: $("#editReason").val()
                };

                $("#edit-reason-error").text('');

                $.ajax({
                    url: '/BlogPost/EditReport',
                    method: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.isSuccess) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Cập nhật thành công',
                                text: 'Báo cáo đã được cập nhật!'
                            }).then(() => location.reload());
                        } else {
                            if (response.errors && response.errors.Reason) {
                                $("#edit-reason-error").text(response.errors.Reason);
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Lỗi',
                                    text: response.message || "Không thể cập nhật báo cáo."
                                });
                            }
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi',
                            text: 'Không thể cập nhật báo cáo.'
                        });
                    }
                });
            });
        });
    </script>
}