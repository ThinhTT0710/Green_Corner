@model IEnumerable<GreenCorner.MVC.ViewModels.ReportWithUserViewModel>

@{
    ViewData["Title"] = "Danh sách báo cáo";
}

<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title mb-4">@ViewData["Title"]</h2>
            <p>Danh sách các báo cáo từ người dùng.</p>
        </div>
        <div>
            <input type="text" placeholder="Tìm theo tên người gửi..." class="form-control bg-white" />
        </div>
    </div>

    <div class="card mb-4">
        <header class="card-header">
            <div class="row gx-3">
                <div class="col-lg-4 col-md-6 me-auto">
                    <input type="text" placeholder="Tìm kiếm..." class="form-control" />
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <select class="form-select">
                        <option>Trạng thái</option>
                        <option>Đã xử lý</option>
                        <option>Chưa xử lý</option>
                        <option>Tất cả</option>
                    </select>
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <select class="form-select">
                        <option>Hiển thị 10</option>
                        <option>Hiển thị 20</option>
                        <option>Hiển thị 50</option>
                    </select>
                </div>
            </div>
        </header>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Người báo cáo</th>
                            <th>Tiêu đề</th>
                            <th>Nội dung</th>
                            <th>Ngày tạo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center">Không có báo cáo nào</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Report.ReportId</td>
                                    <td>@(item.User?.FullName ?? "Không rõ")</td>
                                    <td>@item.Report.Title</td>
                                    <td>@item.Report.Content</td>
                                    <td>@item.Report.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
