@model GreenCorner.MVC.Models.BlogPostDTO

@{
    ViewData["Title"] = "Xóa bài viết";
}

<section class="content-main">
    <form asp-action="DeleteBlog" method="post">
        <input type="hidden" asp-for="BlogId" />
        <input type="hidden" asp-for="AuthorId" />
        <input type="hidden" asp-for="ThumbnailUrl" />
        <input type="hidden" asp-for="Status" />

        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title mb-4">Xóa bài viết</h2>
                </div>
            </div>

            <!-- Phần trái -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label">Tiêu đề</label>
                            <input asp-for="Title" class="form-control" readonly />
                        </div>

                        <div class="mb-4">
                            <label asp-for="Content" class="form-label">Nội dung</label>
                            <textarea asp-for="Content" class="form-control" style="min-height: 300px;" readonly></textarea>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                {
                    <div class="mb-3">
                        <label>Ảnh thumbnail hiện tại:</label>
                        <div class="d-flex gap-2 flex-wrap">
                            @foreach (var img in Model.ThumbnailUrl.Split("&", StringSplitOptions.RemoveEmptyEntries))
                            {
                                <img src="@img" style="max-height: 150px; border: 1px solid #ccc; padding: 4px;" />
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Phần phải -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <label class="form-label">Trạng thái</label>
                        <div class="form-control-plaintext">
                            @if (Model.Status == "Published")
                            {
                                <span class="badge bg-success">Đã đăng</span>
                            }
                            else if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Đang chờ duyệt</span>
                            }
                            else if (Model.Status == "Removed")
                            {
                                <span class="badge bg-danger">Đã gỡ</span>
                            }
                            else
                            {
                                <span class="badge bg-dark">Không xác định</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <h5>Cảnh báo</h5>
                        <p class="text-danger mt-2">
                            Thao tác này không thể hoàn tác. Bài viết sẽ bị xóa vĩnh viễn khỏi hệ thống.
                        </p>
                        <div>
                            <button type="submit" class="btn btn-danger btn-md rounded font-sm hover-up">Xóa</button>
                            <a asp-action="Index" class="btn btn-light rounded font-sm text-body hover-up ms-2">Hủy</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
