@model List<GreenCorner.MVC.Models.PointTransactionDTO>

@{
    ViewData["Title"] = "Reward Redemption History";
}

<section class="content-main">
    <div class="row">
        <div class="col-12">
            <div class="card mt-4 shadow-sm">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead style="background-color: #2e7d32; color: white;">
                            <!-- xanh lá đậm -->
                            <tr>
                                <th>Transaction ID</th>
                                <th>User ID</th>
                                <th>Type</th>
                                <th>Created At</th>
                                <th>Points</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PointTransactionsId</td>
                                        <td>@item.UserId</td>
                                        <td>@item.Type</td>
                                        <td>@item.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@item.Points</td>

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">No redemption history found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

