@model VolunteerRegistrationsViewModel

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Người dùng</th>
            <th>Sự kiện</th>
            <th>Loại đơn</th>
            <th>Phân công</th>
            <th>Vật dụng mang theo</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Registrations)
        {
            <tr>
                <td>@item.Volunteer.VolunteerId</td>
                <td>@item.User.FullName</td>
                <td>@item.Volunteer.CleanEventId</td>
                <td>@item.Volunteer.ApplicationType</td>
                <td>@item.Volunteer.Assignment</td>
                <td>@item.Volunteer.CarryItems</td>
                <td>@item.Volunteer.Status</td>
                <td>
                    <a asp-action="ViewVolunteerRegistrationDetail" asp-route-id="@item.Volunteer.VolunteerId" class="btn btn-info btn-sm">Chi tiết</a>
                    <form asp-action="ApproveVolunteer" asp-route-id="@item.Volunteer.VolunteerId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-success btn-sm">Phê duyệt</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
