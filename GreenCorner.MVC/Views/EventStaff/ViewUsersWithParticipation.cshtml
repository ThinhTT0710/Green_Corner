@model VolunteerRegistrationsViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Người dùng đã tham gia hoạt động";
}

<section class="content-main">
    <div class="content-header d-flex justify-content-between align-items-center">
        <h2 class="content-title mb-4">Người dùng đã tham gia hoạt động</h2>
    </div>

    <div class="card mb-4">
        <header class="card-header">
            <div class="row gx-3">
                <div class="col-md-6 col-lg-4 me-auto">
                    <input type="text" id="searchInput" placeholder="Tìm kiếm tên hoặc email..." class="form-control" />
                </div>
                <div class="col-md-3 col-lg-2">
                    <select id="itemsPerPage" class="form-select">
                        <option value="10">Hiển thị 10</option>
                        <option value="20">Hiển thị 20</option>
                        <option value="all">Tất cả</option>
                    </select>
                </div>
            </div>
        </header>

        <div class="card-body">
            @if (Model.Registrations == null || !Model.Registrations.Any())
            {
                <div class="alert alert-info text-center">
                    Không có người dùng nào đã tham gia hoạt động.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="userTable">
                        <thead class="table-light">
                            <tr>
                                <th>Người dùng</th>
                                <th>Email</th>
                                <th>Trạng thái</th>
                                <th>Lịch sử tham gia</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Registrations)
                            {
                                <tr class="user-row"
                                    data-name="@item.User.FullName.ToLower()"
                                    data-email="@item.User.Email.ToLower()">
                                    <td width="40%">
                                        <a asp-controller="Admin" asp-action="UserDetail" asp-route-userId="@item.User.ID" class="itemside">
                                            <div class="left">
                                                <img src="@item.User.Avatar" class="img-sm img-avatar" alt="Userpic" />
                                            </div>
                                            <div class="info pl-3">
                                                <h6 class="mb-0 title">@item.User.FullName</h6>
                                                <small class="text-muted">#@item.User.ID</small>
                                            </div>
                                        </a>
                                    </td>
                                    <td>@item.User.Email</td>
                                    @if (!item.User.IsBan)
                                    {
                                        <td><span class="badge rounded-pill badge-soft-success">Hoạt động</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge rounded-pill badge-soft-danger">Bị khóa</span></td>
                                    }
                                    <td >
                                        <a asp-action="ViewActivities"
                                           asp-controller="User"
                                           asp-route-userId="@item.User.ID"
                                           class="btn btn-md rounded font-sm">
                                            Xem lịch sử
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="pagination justify-content-start" id="pagination"></div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            const normalize = str => str.normalize("NFD").replace(/[\u0300-\u036f]/g, "").toLowerCase();

            function filterAndPaginate() {
                const keyword = normalize($('#searchInput').val());
                const perPage = $('#itemsPerPage').val();
                const rows = $('.user-row');
                let filtered = rows.filter(function () {
                    const name = normalize($(this).data('name'));
                    const email = normalize($(this).data('email'));
                    return name.includes(keyword) || email.includes(keyword);
                });

                rows.hide();
                let total = filtered.length;

                if (perPage === 'all') {
                    filtered.show();
                    $('#pagination').html('');
                    return;
                }

                const limit = parseInt(perPage);
                const pages = Math.ceil(total / limit);

                // Hiển thị trang đầu
                filtered.slice(0, limit).show();

                // Tạo phân trang
                let html = '';
                for (let i = 1; i <= pages; i++) {
                    html += `<button class="btn btn-sm btn-outline-success me-1 page-btn" data-page="${i}">${i}</button>`;
                }
                $('#pagination').html(html);

                // Sự kiện phân trang
                $('.page-btn').click(function () {
                    const page = parseInt($(this).data('page'));
                    const start = (page - 1) * limit;
                    const end = start + limit;
                    filtered.hide().slice(start, end).show();
                });
            }

            $('#searchInput, #itemsPerPage').on('input change', filterAndPaginate);
            filterAndPaginate();
        });
    </script>
}
