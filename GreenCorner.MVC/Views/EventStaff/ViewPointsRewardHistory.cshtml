@model List<PointTransactionWithUserDTO>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Lịch sử thưởng điểm";
}

<section class="content-main">
    <div class="row">
        <div class="col-12">
            <div class="content-header">
                <h2 class="content-title mb-4">@ViewData["Title"]</h2>
            </div>

            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger">@TempData["error"]</div>
            }

            @if (!Model.Any())
            {
                <div class="alert alert-info">Không có dữ liệu giao dịch điểm.</div>
            }
            else
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Họ tên</th>
                                        <th>Email</th>
                                        <th>Loại</th>
                                        <th>Số điểm</th>
                                        <th>Ngày tạo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.User.FullName</td>
                                            <td>@item.User.Email</td>
                                            <td>
                                                @if (item.Transaction.Type == "Thưởng")
                                                {
                                                    <span class="badge bg-success">@item.Transaction.Type</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@item.Transaction.Type</span>
                                                }
                                            </td>
                                            <td>@item.Transaction.Points</td>
                                            <td>@item.Transaction.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
