@model SaleAnalytics
@{
	ViewData["Title"] = "Dash board";
	Layout = "_LayoutAdmin";
}﻿
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Thống kê bán hàng</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-primary-light"><i class="text-primary material-icons md-monetization_on"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Doanh thu</h6>
                        <span>@Model.TotalSales.ToString("N0", new CultureInfo("vi-VN"))đ</span>
                        <span class="text-sm">Không gồm phí vận chuyển.</span>
                    </div>
                </article>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-info-light"><i class="text-info material-icons md-shopping_basket"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Thu nhập tháng</h6>
                        <span>@Model.TotalMoneyByMonth.ToString("N0", new CultureInfo("vi-VN"))đ</span>
                        <span class="text-sm">Tổng thu nhập của tháng này.</span>
                    </div>
                </article>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-success-light"><i class="text-primary material-icons md-local_shipping"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Đơn hàng</h6>
                        <span>@Model.TotalOrdersComplete</span>
                        <span class="text-sm">Đơn hàng đã hoàn thành.</span>
                    </div>
                </article>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-success-light"><i class="text-warning material-icons md-local_shipping"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Đơn hàng</h6>
                        <span>@Model.TotalOrdersWaiting</span>
                        <span class="text-sm">Đơn hàng chờ xác nhận.</span>
                    </div>
                </article>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-8 col-lg-12">
            <div class="card mb-4">
                <article class="card-body">
                    <h5 class="card-title">Thống kê đơn hàng</h5>
                    <canvas id="myChart" height="120"></canvas>
                </article>
            </div>
        </div>
        <div class="col-xl-4 col-lg-12">
            <div class="card mb-4">
                <article class="card-body">
                    <h5 class="card-title">Danh mục bán chạy</h5>
                    <canvas id="myChart2" height="250"></canvas>
                </article>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6 col-lg-12">
                <div class="card mb-4">
                    <article class="card-body">
                        <h5 class="card-title text-center">Sản phẩm bán chạy</h5>
                        <div class="new-member-list">
                            @if (!Model.BestSellingProducts.Any())
                            {
                                <p class="text-center">Không có sản phẩm bán chạy nào</p>
                            }
                            else{
                            @foreach (var item in Model.BestSellingProducts)
                            {
                                <div class="d-flex align-items-center justify-content-between mb-4">
                                    <div class="d-flex align-items-center">
                                        @{
                                            var imageUrl = item.Product.ImageUrl;
                                            var productImg = imageUrl?.Contains("&") == true ? imageUrl.Split('&')[0] : imageUrl;
                                        }
                                        <img src="@productImg" alt="" class="avatar" />
                                        <div>
                                            <h6 class="product-title">@item.Product.Name</h6>
                                            <p class="text-muted font-xs">@item.Product.Category</p>
                                        </div>
                                    </div>
                                    <div>
                                        <h6>@item.TotalSoldQuantity</h6>
                                    </div>
                                </div>
                            }
                            }
                        </div>
                    </article>
                </div>
            </div>
        <div class="col-xl-6 col-lg-12">
                <div class="card mb-4">
                    <article class="card-body">
                        <h5 class="card-title text-center">Sản phẩm hết hàng</h5>
                        <div class="new-member-list">
                        @if (!Model.OutOfStockProduct.Any())
                        {
                            <p class="text-center">Không có sản phẩm nào hết hàng</p>
                        }
                        else{
                            @foreach (var item in Model.OutOfStockProduct)
                            {
                                <div class="d-flex align-items-center justify-content-between mb-4">
                                    <div class="d-flex align-items-center">
                                        @{
                                            var imageUrl = item.ImageUrl;
                                            var productImg = imageUrl?.Contains("&") == true ? imageUrl.Split('&')[0] : imageUrl;
                                        }
                                        <img src="@productImg" alt="" class="avatar" />
                                        <div>
                                            <h6 class="product-title">@item.Name</h6>
                                            <p class="text-muted font-xs">@item.Category</p>
                                        </div>
                                    </div>
                                    <div>
                                        <h6>@item.Quantity</h6>
                                    </div>
                                </div>
                            }
                            }
                        </div>
                    </article>
                </div>
        </div>
    </div>
</section>

@section Scripts{
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
    (function ($) {
        "use strict";

        var chartData = @Html.Raw(Json.Serialize(Model.ChartData));
        var categorySalesData = @Html.Raw(Json.Serialize(Model.CategorySalesChartData));

        if ($('#myChart').length) {
            var ctx = document.getElementById('myChart').getContext('2d');
            var chart = new Chart(ctx, {
                type: 'line',

                data: {
                        labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                    datasets: [
                        {
                            label: 'Sản phẩm bán được',
                            tension: 0.3,
                            fill: true,
                            backgroundColor: 'rgba(380, 200, 230, 0.2)',
                            borderColor: 'rgb(255, 99, 132)',
                            data: chartData.productsSold 
                        },
                        {
                            label: 'Đơn hoàn thành',
                            tension: 0.3,
                            fill: true,
                            backgroundColor: 'rgba(4, 209, 130, 0.2)',
                            borderColor: 'rgb(4, 209, 130)',
                            data: chartData.completedOrders 
                        },
                        {
                            label: 'Đơn chưa hoàn thành',
                            tension: 0.3,
                            fill: true,
                            backgroundColor: 'rgba(44, 120, 220, 0.2)',
                            borderColor: 'rgba(44, 120, 220)',
                            data: chartData.otherStatusOrders
                        }
                    ]
                },
                options: {
                    plugins: {
                        legend: {
                            labels: {
                                usePointStyle: true,
                            },
                        }
                    }
                }
            });
        }
            if ($('#myChart2').length) {
                var ctx = document.getElementById("myChart2").getContext('2d');
                var myChart = new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: categorySalesData.categoryNames,
                        datasets: [{
                            label: "Số lượng bán ra",
                            backgroundColor: ["#5897fb", "#7bcf86", "#ff9076", "#d595e5", "#ffc107", "#0dcaf0", "#fd7e14"],
                            data: categorySalesData.quantitiesSold
                        }]
                    },
                    options: {
                        plugins: {
                            legend: {
                                position: 'bottom',
                            }
                        }
                    }
                });
            } else {
                $('#myChart2').replaceWith('<div class="text-center mt-4">Không đủ dữ liệu để hiển thị biểu đồ tròn.</div>');
            }
    })(jQuery);
    </script>
}